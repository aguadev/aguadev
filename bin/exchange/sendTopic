#!/usr/bin/perl -w

=head2

APPLICATION 	sendTopic

PURPOSE

	Send messages to a RabbitMQ topic queue
	
HISTORY

	v0.01	Basic options to authenticate user and specify queue name

USAGE

$0 [--user String] [--host String] [--password String] [--vhost String] [--queue String]

EXAMPLE

# Send message to default queue and key

./sendTopic --message '{"mode":"test"}'

=cut

#### EXTERNAL MODULES
use Term::ANSIColor qw(:constants);
use Getopt::Long;
use FindBin qw($Bin);
use AnyEvent;
use Net::RabbitFoot;

#### USE LIBRARY
use lib "$Bin/../../lib";	
BEGIN {
    my $installdir = $ENV{'installdir'} || "/agua";
    unshift(@INC, "$installdir/lib");
}

my $installdir 	=	 $ENV{'installdir'} || "/agua";

#### INTERNAL MODULES
use Conf::Yaml;
use Exchange;

my $configfile	=	"$installdir/conf/config.yaml";

my $conf = Conf::Yaml->new(
    memory      =>  1,
    inputfile   =>  $configfile,
);

my $message		=	"";
my $host		=	$conf->getKey("queue:host", undef) || "localhost";
my $port		=	$conf->getKey("queue:port", undef) || 5672; 
my $user		=	$conf->getKey("queue:user", undef) || "guest";
my $pass		=	$conf->getKey("queue:pass", undef) || "guest";
my $vhost		=	$conf->getKey("queue:vhost", undef) || "/";
my $keys		=	$conf->getKey("queue:topickeys", undef) || "test.exchange.topic";
my $exchange	=	$conf->getKey("queue:topicexchange", undef) || "test.exchange";
my $help;

GetOptions (
    'exchange=s'	=> \$exchange,
    'message=s'		=> \$message,
    'keys=s'		=> \$keys,

    'host=s'		=> \$host,
    'port=s'		=> \$port,
    'user=s'		=> \$user,
    'pass=s'		=> \$pass,
    'vhost=s'		=> \$vhost,

    'log=i'     	=> \$log,
    'printlog=i'    => \$printlog,
    'help'          => \$help

) or die "No options specified. Try '--help'\n";
usage() if defined $help;

#my $object	=	Exchange->new();

my $conn = Net::RabbitFoot->new()->load_xml_spec()->connect(
    host 	=> 	$host,
    port 	=> 	5672,
    user 	=> 	$user,
    pass 	=> 	$pass,
    vhost 	=> 	$vhost,
);

my $channel = $conn->open_channel();

$channel->declare_exchange(
    exchange => $exchange,
    type => 'topic',
);

$channel->publish(
    exchange => $exchange,
    routing_key => $keys,
    body => $message,
);

print " [x] Sent topic message to routing keys $keys: $message\n";

$conn->close();


exit 0;

##############################################################

sub usage {
	print `perldoc $0`;
	exit;
}


