#!/usr/bin/env perl

#### EXTERNAL MODULES
use Getopt::Long;
use FindBin qw($Bin);

#### USE LIBS
use lib "$Bin/../../lib";

my $installdir;
BEGIN {
    $installdir = $ENV{'installdir'} || "/agua";
    unshift(@INC, "$installdir/lib");
}

#### INTERNAL MODULES
#use lib "/agua/lib";
use Conf::Yaml;
use Queue::Foreman;

#### SET LOG
my $mode;
my $log     =   2;
my $printlog    =   4;
my $logfile	=	"$installdir/log/worker.log";
my $help;
GetOptions (
    'mode=i'     	=> \$mode,
    'log=i'     	=> \$log,
    'printlog=i'    => \$printlog,
    'help'          => \$help
) or die "No options specified. Try '--help'\n";
usage() if defined $help;

my $configfile	=	"$installdir/conf/config.yaml";
my $conf = Conf::Yaml->new(
    inputfile	=>	$configfile,
    backup		=>	1,
    log     =>  2,
    printlog    =>  4,
	logfile		=>	$logfile
);

my $object      =  Queue::Foreman->new({
	mode		=>	$mode,
    conf        =>  $conf,
    log			=>	$log,
    printlog	=>	$printlog,
	logfile		=>	$logfile
});

$object->listen();

##############################################################

sub usage {
	print `/usr/bin/env perldoc $0`;
	exit;
}

