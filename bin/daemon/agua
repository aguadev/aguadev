#!/usr/bin/env perl

#### EXTERNAL MODULES
use Getopt::Long;
use FindBin qw($Bin);

#### USE LIBS
use lib "$Bin/../../lib";

my $installdir;
BEGIN {
    $installdir = $ENV{'installdir'} || "/agua";
    unshift(@INC, "$installdir/lib");
}

#### INTERNAL MODULES
#use lib "/agua/lib";
use Conf::Yaml;
use Queue::Daemon;

#### SET LOG
my $showlog     =   2;
my $printlog    =   4;
my $logfile		=	"$installdir/log/agua-daemon.log";
my $help;
GetOptions (
    'showlog=i'     => \$showlog,
    'printlog=i'    => \$printlog,
    'help'          => \$help
) or die "No options specified. Try '--help'\n";
usage() if defined $help;

my $configfile	=	"$installdir/conf/config.yaml";
my $conf = Conf::Yaml->new(
    inputfile	=>	$configfile,
    backup		=>	1,
    showlog     =>  2,
    printlog    =>  4,
	logfile		=>	$logfile
);

my $object      =  Queue::Daemon->new({
    conf        =>  $conf,
    showlog     =>  $showlog,
    printlog    =>  $printlog,
	logfile		=>	$logfile
});


##############################################################

sub usage {
	print `/usr/bin/env perldoc $0`;
	exit;
}

